@model IEnumerable<RestarauntRaterMVC.Models.Restaurant>
@{
    ViewBag.Title = "Restaurants";
}

<h2>Restaurants</h2>
<p>
    @Html.ActionLink("Rate a Restaurant", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FoodType)
        </th>
        <th></th>
    </tr>
    @foreach (var restaurant in Model)//Model- is a property class.
    {
        <tr>
            <td>
                @Html.DisplayFor(item =>restaurant.Name) //will take the actual property
            </td>
            <td>
                @Html.DisplayFor(item => restaurant.Rating) 
            </td>
            <td>
                @Html.DisplayFor(item => restaurant.FoodType) 
            </td>
            <td>
                @*Link Text,Action name*@
                @Html.ActionLink("Update", "Edit", new { id = restaurant.RestaurantID })|
                @Html.ActionLink("More Info", "Details", new { id = restaurant.RestaurantID }) |
                @Html.ActionLink("Destroy", "Delete", new { id = restaurant.RestaurantID })
            </td>
        </tr>
    }
</table>

